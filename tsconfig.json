{
  "compilerOptions": {
    "jsx": "react-jsx", // Use "react-jsx" for React 17+; use "react" for older versions
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
